<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/UserInf"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_width="40dp"
            android:id="@+id/avt"
            app:riv_oval="true"
            android:scaleType="centerCrop"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circle_background"
            android:src="@drawable/account"/>
        <LinearLayout
            android:layout_toEndOf="@+id/avt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textSize="15sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/timeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time Stamp"
                android:textSize="8sp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_more_svg"
            android:id="@+id/moreBtn"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UserInf"
        android:orientation="vertical"
        android:id="@+id/postLayout">
        <TextView
            android:id="@+id/caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write something to share your status"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/hintTextColor"
            android:background="@android:color/transparent"/>
        <ImageView
            android:scaleType="centerCrop"
            android:layout_below="@+id/caption"
            android:background="@color/hintTextColor"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/imagePost"
            android:contentDescription="ur image" />
        <ImageView
            android:id="@+id/loveAnim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imagePost"
            android:layout_alignBottom="@+id/imagePost"
            android:padding="120dp"
            android:fadingEdge="vertical"
            android:visibility="gone"
            android:src="@drawable/love_fill"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/react_Layout"
        android:layout_below="@+id/postLayout"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginStart="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/love"
            android:src="@drawable/love_48px"
            android:layout_marginTop="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/totalLove"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="5dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/comment"
            android:src="@drawable/mode_comment"
            android:layout_marginTop="2dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/totalComment"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="5dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/share_48px"
            android:layout_marginTop="2dp"
            android:id="@+id/share"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/totalShare"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/bottom"
        android:layout_below="@+id/react_Layout"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            android:id="@+id/cmt_recycleView"/>
    </LinearLayout>
</RelativeLayout>